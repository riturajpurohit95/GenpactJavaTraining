		<!-- constructor injection list: string -->
		<bean id="listBean" class="com.firstspringproject.hello_world.HelloCollections">
		<constructor-arg>
			<list>
				<value>Java Spring</value>
				<value>HTML</value>
				<value>Python</value>
			</list>
		</constructor-arg>
		</bean>
		
		<!-- constructor injection set: integers -->
		<bean id="setBean" class="com.firstspringproject.hello_world.HelloCollections">
		
			<constructor-arg>
				<set>
					<value>101</value>
					<value>102</value>
					<value>103</value>
				</set>
			</constructor-arg>

		</bean>
		
		<!-- setter injection map -->
		<bean id="mapBean" class="com.firstspringproject.hello_world.HelloCollections">
		
			<property name="cmap">
				<map>
					<entry key="url" value="jdbc:mysql"/>
					<entry key="username" value="root"/>
					<entry key="password" value="Genpact@123456789"/>
				</map>
			</property>
		</bean>
		
</beans>